/* ---- carousel ---- */
.carousel-cell {
  width: 100%; /* full width */
  height: auto; /* height of carousel */
  margin: 10px;
  background-color: white;
  padding: 30px;
}
.button--next{
  background-color: $blue;
  color: white;
  border: none;
  border-radius: 50px;
  padding: 15px 10px;
  width: 20%;
  text-transform: uppercase;
}
.button--report{
  background-color: #5762d7;
  color: white;
  border: none;
  border-radius: 50px;
  padding: 15px 10px;
  width: 20%;
  text-transform: uppercase;
}
.button--done{
  background-color: #5762d7;
  color: white;
  border: none;
  border-radius: 50px;
  padding: 15px 10px;
  width: 20%;
  text-transform: uppercase;
}
.button--previous{
  color: $teal;
}
